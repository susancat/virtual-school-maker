<%- include("./partials/header") %>
<%- include("./partials/vsmHeader") %>

<div class="container">
    <div class="row">
    <h2 class="text-center" style="width:40%; margin: auto;">Sign In</h2>
    </div>
    <div class="row">
        <div class=""  style="width:40%; margin: auto;">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="user"> Username: </label>
                    <input id="user" class="form-control" type="text" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <label> Password: </label>
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Login</button>
                </div>
            </form>
            <hr>
            <p class="text-center">Don't have an account?&nbsp;&nbsp;<a href="/register">Sign up here</a></p>
            <h5 class="text-center">OR</h5>
            <a class="btn btn-danger btn-block" href='/auth/google'><i class="fa fa-google" aria-hidden="true"></i>&nbsp;&nbsp;Login with Google</a>
            <hr>
        </div>
    </div>       
</div>

<%- include("./partials/footer") %>