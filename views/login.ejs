<%- include("./partials/header") %>
<div class="container text-center" style="padding-top: 5%;">
    <div class="border border-muted" style="width: 40%; margin-left: auto; margin-right: auto;margin-bottom: 0;" id="signinbox" >
        <div class="row" style="width: 100%; margin: 0; padding-left: 0; padding-right: 0;">
            <h2 class="text-center pb-2" style="width:40%; margin: auto;">Sign In</h2>
            </div>
            <div class="row" style="width: 100%; margin: 0; padding: 0;">
                <div class=""  style="width:40%; margin: auto;">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="user"> Username: </label>
                            <input id="user" class="form-control" type="text" name="username" placeholder="username" required>
                        </div>
                        <div class="form-group">
                            <label> Password: </label>
                            <input class="form-control" type="password" name="password" placeholder="password" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Login</button>
                        </div>
                    </form>
                    <hr>
                    <p class="text-center">Don't have an account?&nbsp;&nbsp;<a href="/register">Sign up here</a></p>
                    <h5 class="text-center">OR</h5>
                    <a class="btn btn-danger btn-block" href='/auth/google'><i class="fa fa-google" aria-hidden="true"></i>&nbsp;&nbsp;Login with Google</a>
                    <hr>
                </div>
            </div>
    </div> 
</div>

<%- include("./partials/footer") %>