<%- include("../partials/header") %>
<%- include("../partials/vsmHeader") %>

<div class="container">
    <div class="row">
        <h1 class="text-center create_div" style="width:45%; margin: 25px auto;">Create a new email for <%= course.name%></h1>
    </div>
    <div class="row">
        <div class="create_div" style="width:40%; margin: 25px auto;">
            <form action="/courses/<%= course._id %>/emails" method="POST">
                <div class="form-group">
                    <textarea data-step="2" data-intro="Refresh this page, copy students' emails in." data-position="left" class="form-control" type="text" name="to" placeholder="Input students' email here, seperated by ',' (required)" required></textarea>
                </div>
                <div class="form-group">
                    <input data-step="3" data-intro="Finish other parts of the form, 'Send' the mail and done!" data-position="left" class="form-control" type="text" name="from" value="developer@daltonlearninglab.com" placeholder="Sender: please use 'developer@daltonlearninglab.com' for testing." required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="subject" placeholder="Subject (required)" required>
                </div>
                <div class="form-group">
                    <textarea data-step="1" data-intro="Now you could pass the game link and quiz ID from last page." data-position="left" class="form-control" rows=10 type="text" name="html" required>&#183;&nbsp;Class ID: <%= course.classID %>&#13;&#10;&#183;&nbsp;Game link: <%= course.selectedServer %>&#13;&#10;&#183;&nbsp;Quiz ID: <%= course.quizid %>&#13;&#10;
                    </textarea>
                </div>
                <div class="form-group">
                    <a href="/courses/<%= course._id %>" class="btn btn-lg btn-secondary" style="width:48%">Cancel</a>
                    <button class="btn btn-lg btn-primary ml-1" style="width:49%;">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
