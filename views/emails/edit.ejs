<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Email</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/courses/<%= course_id %>/emails/<%=email._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="email[title]" value="<%=email.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email[classID]" value="<%=email.classID %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email[text]" value="<%=email.text %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email[recipients]" value="<%=email.recipients %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">send</button>
                </div>
            </form>
            <a href="/courses">Back to Class</a>
        </div>
        

       
    </div>
    
</div>
<%- include("../partials/footer") %>