<%- include("../partials/header") %>
<%- include("../partials/vsmHeader") %>

<div class="container">
    <div class="row">
        <h1 class="create_div" style="text-align: center">Edit Email</h1>
        <div class="create_div" style="width:40%; margin: 25px auto;">
            <form action="/courses/<%= course_id %>/emails/<%=email._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="email[title]" value="<%=email.title %>" placeholder="Title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email[classID]" value="<%=email.classID %>" placeholder="Class ID">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email[text]" value="<%=email.text %>" placeholder="Text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email[recipients]" value="<%=email.recipients %>" placeholder="Recipients">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Send</button>
                </div>
            </form>
            <a href="/courses">Back to Class</a>
        </div>  
    </div>  
</div>
<%- include("../partials/footer") %>