<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="text-center" style="max-width:40%; margin: 25px auto;">Import <%= quiz.title %></h1>
    </div>
    <div class="row">      
        <div style="max-width:40%; margin: 25px auto;">
            <form action="/quizzes/<%= quiz._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="quiz[title]" value="<%= quiz.title %>" disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" name="quiz[category]" value="<%= quiz.category %>" disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" name="quiz[level]" value="<%= quiz.level %>" disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="quiz[image]" value="<%=quiz.image %>" disabled>
                </div>
                <div class="form-group">
                    <textarea rows=5 class="form-control" type="text" name="quiz[description]" value="<%= quiz.description %>" disabled></textarea>
                </div>
                <div class="form-inline">
                    <label for="op1">Set to be publicly shared?(please untick it if you are trying to import a public quiz)</label>
                    <input style="width: 1.5rem;" id="op1" class="form-control ml-auto" type="checkbox" name="public" checked value="true">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/quizbank/<%= quiz._id %>">Back to the Quiz!</a>
        </div>       
    </div>   
</div>
<%- include("../partials/footer") %>
<script>
    $('#op1').prop('checked', false);
</script>