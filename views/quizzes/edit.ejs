<%- include("../partials/header") %>
<%- include("../partials/vsmHeader") %>

<div class="container">
    <div class="row">
        <h1 class="text-center" style="width:40%; margin: auto;">Edit <%= quiz.title %></h1>
    </div>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/quizzes/<%= quiz._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="quiz[title]" value="<%= quiz.title %>" placeholder="Title">
                </div>
                <div class="form-group">
                    <select class="form-control" name="quiz[category]" value="<%= quiz.category %>">
                        <option selected>- Category -</option>
                        <option value="Animal">Animal</option>
                        <option value="Food and Drink">Food and Drink</option>
                        <option value="World">World</option>
                        <option value="Science">Science</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="quiz[level]" value="<%= quiz.level %>">
                        <option selected>- Difficulty level -</option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Difficult">Difficult</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea rows=5 class="form-control" type="text" name="quiz[description]" value="<%= quiz.description %>" placeholder="Description"></textarea>
                </div>
                <div class="form-inline">
                    <label for="op1">Set to be publicly shared?&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input style="width: 1.5rem;" id="op1" class="form-control ml-auto" type="checkbox" name="public" checked value="true">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>    
    </div>   
</div>
<%- include("../partials/footer") %>
<script>
    $('#op1').prop('checked', false);
</script>