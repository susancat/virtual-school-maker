<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new student to <%= course.classID%></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/courses/<%= course._id %>/player-data" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="player[name]" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[studentID]" placeholder="Student ID" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[points]" placeholder="points">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[remark]" placeholder="remark" >
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/courses">Back to Class</a>
        </div>
        

       
    </div>
    
</div>
<%- include("../partials/footer") %>