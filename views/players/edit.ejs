<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Student</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/courses/<%= course_id %>/player-data/<%=player.userID %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="player[name]" value="<%=player.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[studentID]" value="<%=player.studentID %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[remark]" value="<%=player.remark %>">
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit</button>
                </div>
            </form>
            <a href="/courses">Back to Class</a>
        </div>
        

       
    </div>
    
</div>
<%- include("../partials/footer") %>