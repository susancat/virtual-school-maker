<%- include("../partials/header") %>
<%- include("../partials/vsmHeader") %>
<div class="container">
    <div class="row">
        <h1 class="text-center" style="width:40%; margin: auto;">Edit Record for <%= player.name %></h1>
    </div>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/courses/<%= course_id %>/player-data/<%=player.userID %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="player[name]" value="<%=player.name %>" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[studentID]" value="<%=player.studentID %>" placeholder="Student ID">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[cash]" value="<%=player.cash %>" placeholder="Cash">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[remark]" value="<%=player.remark %>" placeholder="Remarks">
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/courses/<%= course_id %>">Back to Class</a>
        </div>             
    </div> 
</div>
<%- include("../partials/footer") %>