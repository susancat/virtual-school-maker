<%- include("../partials/header") %>
<%- include("../partials/vsmHeader") %>
<div class="container">
    <div class="row">
        <h1 class="text-center create_div" style="width:40%; margin: auto;">Share something with <%= course.name %> students</h1>
    </div>
    <div class="row">
        <div class="create_div" style="width:40%; margin: 25px auto;">
            <form action="/courses/<%= course._id %>/assignments" method="POST">   
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Title (required)" required>
                </div>
                <div class="form-group">
                    <textarea rows=5 class="form-control" type="text" name="text" placeholder="Share something..."></textarea>
                </div>
                <div class="form-group mt-2">
                    <a href="/courses/<%= course._id %>" class="btn btn-lg btn-secondary" style="width:48%">Cancel</a>
                    <button class="btn btn-lg btn-primary ml-1" style="width:49%;">Submit</button>
                </div>
            </form>
        </div>
    </div>  
</div>
<%- include("../partials/footer") %>