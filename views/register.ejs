<%- include("./partials/header") %>
<%- include("./partials/vsmHeader") %>

<div class="container">
    <div class="row">
        <h2 class="text-center" style="width:40%; margin: auto;">Sign Up</h2>
    </div>
    <div class="row">
        <div class=""  style="width:40%; margin: 25px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="user"> Username: </label>
                    <input id="user" class="form-control" type="text" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <label> Email: </label>
                    <input class="form-control" type="email" name="email" placeholder="Your Email">
                </div>
                <div class="form-group">
                    <label> Password: </label>
                    <input class="form-control" type="password" name="password" placeholder="Password (8-16 characters)" pattern=".{8,16}" required title="8 to 16 characters" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Sign up!</button>
                </div>
            </form>
            <hr>
            <p class="text-center">Already have an account?&nbsp;&nbsp;<a href="/login">Log in</a></p>
            <h5 style="text-align: center;">OR</h5>
            <a class="btn btn-danger btn-block" href='/auth/google'><i class="fa fa-google" aria-hidden="true"></i>&nbsp;&nbsp;Signup with Google</a>
            <hr>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>